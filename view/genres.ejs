<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genres</title>
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="/genres.css">
    <link rel="stylesheet" href="/navbar.css">
    <link rel="stylesheet" href="/movies.css">
</head>
<body>
    <%- include("navbar") %>
    <div class="genreContainer">
        <% if(locals.genres) { %>
            <% genres.map(genre => { %>
                <div class="genreCard">
                    <div class="genreImage"></div>
                    <div class="genreName"><%= genre.genrename %></div>
                    <a class="btnLink" href="/genres/<%= genre.id %>"><button class="viewMore">View Movies</button></a>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>